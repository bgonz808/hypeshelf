{
  "name": "hypeshelf",
  "version": "0.1.0",
  "private": true,
  "description": "A shared recommendations hub for friends - collect and share the stuff you're hyped about",
  "author": "bgonz808",
  "license": "MIT",
  "scripts": {
    "dev": "npm run convex:dev & next dev",
    "dev:next": "next dev",
    "build": "npm run build:logos && convex deploy -y && next build",
    "build:next": "next build",
    "start": "next start",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test --grep @a11y",
    "test:color-modes": "playwright test e2e/color-modes.spec.ts",
    "test:color-modes:update": "playwright test e2e/color-modes.spec.ts --update-snapshots",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "backup:prod": "npx tsx scripts/backup-and-deploy.ts --backup-only",
    "deploy:safe": "npx tsx scripts/backup-and-deploy.ts",
    "prepare": "husky",
    "audit:deps": "npm audit --audit-level=high",
    "audit:secrets": "gitleaks detect --source . --verbose",
    "audit:colors": "npx tsx scripts/audit-colors.ts",
    "audit:colors:strict": "npx tsx scripts/audit-colors.ts --strict",
    "sbom": "npm sbom --sbom-format cyclonedx > sbom.json",
    "build:logos": "npx tsx scripts/build-logos.ts",
    "build:logos:watch": "npx tsx watch scripts/build-logos.ts",
    "secrets:migrate": "npx tsx scripts/migrate-secrets.ts",
    "security:check": "npx tsx scripts/security-check.ts",
    "security:drift": "npx tsx scripts/detect-tool-drift.ts",
    "version:check": "npx tsx scripts/check-version.ts",
    "i18n:check": "npx tsx scripts/i18n-check.ts",
    "i18n:extract": "npx tsx scripts/i18n-extract.ts",
    "i18n:audit": "npx tsx scripts/i18n-audit-translations.ts --warn-only",
    "i18n:audit:strict": "npx tsx scripts/i18n-audit-translations.ts",
    "spellcheck": "cspell \"messages/**/*.json\" \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@clerk/nextjs": "6.36.9",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.24.0",
    "clsx": "2.1.1",
    "convex": "1.31.6",
    "next": "16.1.4",
    "next-intl": "4.7.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "2.6.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "19.8.1",
    "@inquirer/prompts": "8.2.0",
    "@playwright/test": "1.58.0",
    "@swc/helpers": "0.5.18",
    "@tailwindcss/postcss": "4.1.18",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@types/node": "22.19.7",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "4.7.0",
    "@vitest/coverage-v8": "4.0.18",
    "chalk": "5.6.2",
    "compromise": "14.14.5",
    "cspell": "9.6.2",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "eslint-plugin-i18next": "6.1.3",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-security": "3.0.1",
    "franc": "6.2.0",
    "husky": "9.1.7",
    "jest-axe": "9.0.0",
    "jsdom": "25.0.1",
    "lint-staged": "15.5.2",
    "png-to-ico": "2.1.8",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "sharp": "0.34.5",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  }
}
