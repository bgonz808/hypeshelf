{
  "name": "hypeshelf",
  "version": "0.1.0",
  "private": true,
  "description": "A shared recommendations hub for friends - collect and share the stuff you're hyped about",
  "author": "bgonz808",
  "license": "MIT",
  "scripts": {
    "dev": "npm run convex:dev & next dev",
    "dev:next": "next dev",
    "build": "convex deploy --cmd 'next build'",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "prepare": "husky",
    "audit:deps": "npm audit --audit-level=high",
    "audit:secrets": "gitleaks detect --source . --verbose",
    "sbom": "npm sbom --sbom-format cyclonedx > sbom.json"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.0.0",
    "convex": "^1.17.0",
    "next": "^14.2.0",
    "next-intl": "^3.20.0",
    "react": "^18.3.0",
    "react-dom": "^19.2.3",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "jsdom": "^25.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "@vitejs/plugin-react": "^4.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
