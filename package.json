{
  "name": "hypeshelf",
  "version": "0.1.0",
  "private": true,
  "description": "A shared recommendations hub for friends - collect and share the stuff you're hyped about",
  "author": "bgonz808",
  "license": "MIT",
  "scripts": {
    "dev": "npm run convex:dev & next dev",
    "dev:next": "next dev",
    "build": "npm run build:logos && convex deploy -y && next build",
    "build:next": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "playwright test --grep @a11y",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "prepare": "husky",
    "audit:deps": "npm audit --audit-level=high",
    "audit:secrets": "gitleaks detect --source . --verbose",
    "sbom": "npm sbom --sbom-format cyclonedx > sbom.json",
    "build:logos": "npx tsx scripts/build-logos.ts",
    "build:logos:watch": "npx tsx watch scripts/build-logos.ts",
    "secrets:migrate": "npx tsx scripts/migrate-secrets.ts",
    "security:check": "npx tsx scripts/security-check.ts",
    "version:check": "npx tsx scripts/check-version.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "5.7.5",
    "convex": "1.31.5",
    "next": "14.2.35",
    "next-intl": "3.26.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "clsx": "2.1.1",
    "tailwind-merge": "2.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@vitest/coverage-v8": "2.1.9",
    "jsdom": "25.0.1",
    "@types/node": "22.19.7",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "autoprefixer": "10.4.23",
    "eslint": "9.39.2",
    "eslint-config-next": "14.2.35",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "husky": "9.1.7",
    "lint-staged": "15.5.2",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "tailwindcss": "3.4.19",
    "typescript": "5.9.3",
    "vitest": "2.1.9",
    "@vitejs/plugin-react": "4.7.0",
    "@playwright/test": "1.57.0",
    "@axe-core/playwright": "4.11.0",
    "jest-axe": "9.0.0",
    "sharp": "0.33.5",
    "png-to-ico": "2.1.8",
    "tsx": "4.21.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
